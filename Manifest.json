{
  "name": "Novelupdates",
  "description": "Minu Reading Listi RSS Feed",
  "icons": {	"16": "favicon.ico",
				"48": "icon.png",
				"128": "icon.png" },
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*",
    "webNavigation",
    "storage",
    "notifications"
  ],
 
  "content_scripts" : [
    {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["background.js"]
     }
  ],
  "browser_action": {
    "default_title": "Novel Feed",
	"default_icon": "icon.png",
	"default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "manifest_version": 2
}
